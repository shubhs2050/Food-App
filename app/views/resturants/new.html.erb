<h1>Add new Resturant</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @resturant, html: { multipart: true } do |f| %>
    <%= render 'shared/rest_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :owner_name %>
      <%= f.text_field :owner_name, class: 'form-control' %>

      <%= f.label :attachment %>
      <%= f.file_field :image %>
      <div class="input-field col s12">
<%= f.collection_select(:owner_id, Owner.all, :id, :name, {}, { :class => "select_box", :style => "display:block;" }) %>
          </div>
      <%= f.submit "Add my Resturant", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr />
<h3>List of All Resturants: </h3><br />
<% if !@resturants.blank? %>

<% for item in @resturants %>
<%= item.name %> (<%= item.owner_name %>)<br>
<% end %>
<% else %>
<% end %>
