<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@resturant) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :owner_name %>
      <%= f.text_field :owner_name, class: 'form-control' %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
